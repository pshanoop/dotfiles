#!/bin/sh

set -ex

DEVICE_TYPES="--sink"

if [ $1 == decrease ]; then
  COMMAND="decrease 3"
elif [ $1 == increase ]; then
  COMMAND="increase 3"
elif [ $1 == min ]; then
  COMMAND="set-volume 0"
elif [ $1 == max ]; then
  COMMAND="set-volume 100"
elif [ $1 == toggle ]; then
  COMMAND="toggle"
elif [ $1 == toggle-mic ]; then
  COMMAND="toggle"
  DEVICE_TYPES="--source"
else
  echo "Bad argument"
  exit -1
fi

# Alter volume for the default device only.
ponymix $DEVICE_TYPES $COMMAND > /dev/null

# XXX: Todo: if headphones are found, set speaker volume to 0.
