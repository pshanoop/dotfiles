#!/bin/sh

if ponymix --sink is-muted; then
  MUTE=" (muted)"
  ICON=audio-volume-muted
else
  ICON=audio-volume-medium
fi

if ! ponymix --source is-muted; then
  MUTE2=" (mic: ON)"
fi

dunstify -u low -r 53 \
  -i $ICON \
  --hints="int:transient:1" \
  "Volume changed" \
  "$(ponymix get-volume)% $MUTE $MUTE2"
