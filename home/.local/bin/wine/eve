#!/bin/sh
#
# Runs eve on desktop $1 with an almost-fullscreen-resolution, leaving the i3 status bar visible.

I3_STATUS_SIZE=24

RES=$(xrandr | grep -Po "^\s+\w+" | head -n 1)
WIDTH=$(echo $RES | grep -Po "^[^x]+")
HEIGHT=$(echo $RES | grep -Po "[^x]+$")
HEIGHT=$(calc $HEIGHT-$I3_STATUS_SIZE | grep -Po "\w+")

RES=${WIDTH}x${HEIGHT}

export WINEPREFIX=$HOME/wine/prefixes/eve
wine explorer /desktop=eve$RANDOM,$RES "C:/EVE/Launcher/evelauncher.exe"
