#!/bin/sh

export XKB_DEFAULT_LAYOUT=es
export XKB_DEFAULT_OPTIONS=caps:escape

export GDK_BACKEND=wayland
export CLUTTER_BACKEND=wayland
export SDL_VIDEODRIVER=wayland
export _JAVA_AWT_WM_NONREPARENTING=1

export LD_PRELOAD=/usr/lib/libgtk3-nocsd.so.0:$LD_PRELOAD
export GTK_CSD=0
export QT_DISABLE_WINDOWDECORATION=1

export GDK_SCALE=1  # Needed?
export GDK_DPI_SCALE=1.66666666666666  # Same as setting DPI to 160

export QT_SCALE_FACTOR=1.6

/usr/bin/sway -d 2>&1 | tee .cache/sway.log
