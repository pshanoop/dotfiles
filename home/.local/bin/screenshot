#!/bin/sh

COMMAND="maim --showcursor"
FILENAME="$HOME/screenshots/$(date -Ins).png"

if [ -z $1 ]; then
  $COMMAND $FILENAME
  echo $FILENAME
elif [ $1 = "active" ]; then
  $COMMAND -i $(xdotool getactivewindow) $FILENAME
  echo $FILENAME
elif [ $1 = "here" ]; then
  echo "Unknown argument: $1"
fi;
