#!/bin/sh

DESTINATION=~/screenshots

mkdir -p $DESTINATION
cd $DESTINATION

if [ -z $1 ]; then
  scrot -q 98 -e 'echo $f' $(date -Ins).png
elif [ $1 = "active" ]; then
  scrot -u -q 98 -e 'echo $f' $(date -Ins).png
elif [ $1 =  "select" ]; then
  scrot -s -q 98 -e 'echo $f' $(date -Ins).png
elif [ $1 = "here" ]; then
  scrot -cd 5 $@
fi;
