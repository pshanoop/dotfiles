#!/bin/sh

set -x

# Never run more than one i3lock instance
pgrep i3lock && exit

systemctl --user stop caffeine &
killall -SIGUSR1 dunst &
xset dpms force off
xset dpms 3

i3lock -nfel -r 15 -s 15
# i3lock -nfelo -r 15 -s 15  # <<<--- need new release

xset dpms 120
killall -SIGUSR2 dunst
systemctl --user start caffeine
