#!/bin/sh

xrandr | grep -P "^DP1 connected"

if [ $? == 0 ]; then
  xrandr \
    --output DP1 --mode 2560x1440 --pos 1920x1080 \
    --output eDP1 --primary --mode 1920x1080 --pos 0x1440
else
  xrandr \
    --output DP1 --off \
    --output eDP1 --primary --mode 1920x1080 --pos 0x1440
fi

xinput --map-to-output 'ELAN2934:00 04F3:2934' eDP1
systemctl --user restart xwallpaper.service
