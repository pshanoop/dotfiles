#!/bin/sh

xrandr | grep -P "^DP-1 connected"

if [ $? == 0 ]; then
  xrandr \
    --output DP-1 --mode 2560x1440 --pos 1920x0 \
    --output eDP-1 --primary --mode 1920x1080 --pos 0x1440
else
  xrandr \
    --output DP-1 --off \
    --output eDP-1 --primary --mode 1920x1080 --pos 0x1440
fi

xinput --map-to-output 'ELAN2934:00 04F3:2934' eDP-1
systemctl --user restart xwallpaper.service
