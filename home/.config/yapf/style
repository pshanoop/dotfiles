[style]
# This keeps key: value in the same line:
allow_split_before_dict_value = false
# Applies when arguments need to be split over multiple lines:
split_before_first_argument = true
# When they've multiple levels, make them multiline:
split_complex_comprehension = true
# Don't split consecutive branckets:
coalesce_brackets = true
# Keep closing bracket aligned with opening one:
dedent_closing_brackets = true
# This one makes no sense:
space_between_ending_comma_and_closing_bracket = false
# This is a way of hinting that they should be kept split:
split_arguments_when_comma_terminated = true
# This keeps sanity when a nested group fits fine a one line:
split_all_top_level_comma_separated_values = false
# Logicals operators go after the newline:
split_before_logical_operator = true
split_before_arithmetic_operator = true
# When breaking a generator, do it before the set:
split_before_dict_set_generator = true
# Eg: blank line before class methods:
blank_line_before_nested_class_or_def = true

column_limit = 79

; vim: ft=dosini
