
### Terminals ###
#################

super + t
  $TERMINAL
super + m
  mutt-win
super + Return
  urxvt

### Unique sequences ###
########################

control + alt + Escape
  xkill
XF86Tools
  kbctl
XF86Display
  screenswitch
XF86LaunchB
  screenswitch
super + shift + t
  say the time is $(date +%R)
super + shift + w
  say $(weather)
super + shift + h
  mpv --loop=inf --fs ~/videos/hypnotoad.mp4

## Athena specific ##

{_,super + }XF86MonBrightness{Down,Up}
  light -s mba6x_backlight -{U 3,S 0,A 3,S 100}
{_,super + }XF86KbdBrightness{Down,Up}
  kbdlight {down,off,up,max}

### Lock Screen ###
###################
# Ares, Hyperion and Athena respectively

XF86HomePage
  lockx
XF86PowerOff
  lockx
shift + XF86PowerOff
  systemctl suspend
super + XF86PowerOff
  systemctl hibernate
control + XF86PowerOff
  systemctl poweroff
super + shift + XF86PowerOff
  systemctl poweroff

### Autoclick ###
#################

super + F1
  xdotool click --repeat 5000 --delay 500 1

super + F2
  pkill xdotool

### Screenshots ###
###################

Print
  screenshot
control + Print
  screenshot select
alt + Print
  screenshot active
super + Print
  scrotpush

# These are for PrintScreen-less keyboards
control + alt + super + p
  screenshot
shift + control + alt + super + p
  scrotpush

### Desktop Apps ###
####################

super + q
  nemo --no-desktop
super + c
  $BROWSER
super + o
  arandr
super + g
  sftpman-gtk

### Media Keys ###
##################

XF86AudioPlay
  mpc-secure toggle
XF86AudioPrev
  mpc-secure prev
XF86AudioNext
  mpc-secure next
XF86AudioStop
  mpc-secure stop
XF86Calculator
  $TERMINAL -e calc -d

XF86AudioLowerVolume
  ponymix decrease 3 && volume-notify
super + XF86AudioLowerVolume
  ponymix set-volume 0 && volume-notify
XF86AudioRaiseVolume
  ponymix increase 3 && volume-notify
super + XF86AudioRaiseVolume
  ponymix set-volume 100 && volume-notify
XF86AudioMute
  ponymix toggle && volume-notify

### Mouse ###
#############

# MX thumb buttons
button10
  ponymix decrease 3 && volume-notify
button13
  ponymix increase 3 && volume-notify

# MX side buttons
button9
  screenshot
button8
  screenshot active

# Trackpad three-finger swipe, vertical
button18
  ponymix decrease 3
button16
  ponymix increase 3

# Trackpad three-finger swipe, horizontal
button17
  i3-msg workspace prev_on_output
button19
  i3-msg workspace next_on_output
