[calendars]

  [[birthdays]]
  path = ~/.local/share/contacts/cards/
  type = birthdays
  color = light magenta

  [[calendars]]
  path = ~/.local/share/calendars/*
  type = discover

[locale]
longdatetimeformat = "%m %B %Y, %H:%M"
datetimeformat = %Y-%m-%d %H:%M
longdateformat = %a %Y-%m-%d
dateformat = %Y-%m-%d
timeformat = %H:%M

[default]
timedelta = 8 days

[view]
agenda_event_format = "{calendar-color}{start-end-time-style} {title}{repeat-symbol}{reset}"
dynamic_days = False

