[general]
metadata = ~/.local/share/offlineimap
accounts = Personal, Minimalistech 
maxsyncaccounts = 12
ui = basic

### personal ###

[Account Personal]
localrepository = LocalPersonal
remoterepository = RemotePersonal
autorefresh = 5
quick = 2
postsynchook = /usr/bin/notmuch new

[Repository LocalPersonal]
type = Maildir
localfolders = ~/.local/share/maildir/Personal
restoreatime = no
createfolders = True

[Repository RemotePersonal]
type = IMAP
remotehost = imap.barrera.io
remoteuser = hugo@barrera.io
remotepassfile = ~/priv/secrets/imap@elysion
ssl = yes
cert_fingerprint = e4202832cc90de81ad6d8be476ea646281558514
idlefolders = ['INBOX', 'RSS', 'News', 'Notifications', 'Archives.2013']
maxconnections = 6
holdconnectionopen = yes
subscribedonly = no
createfolders = False

