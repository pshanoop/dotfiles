{
  // Global settings ==========================================================

  // This flag makes ALE display diagnostic messages found by Coc plugins.
  "diagnostic.displayByAle": true,

  // "null" makes emoji autocomplete work on all filetypes.
  "coc.source.emoji.filetypes": null,
  "diagnostic.errorSign": "",
  "diagnostic.warningSign": "",
  "diagnostic.infoSign": "",
  // Show errors in the statusbar (the default is a popup that hides the code).
  "diagnostic.messageTarget": "echo",
  // Show errors for the entire line (defaults to just current char).
  "diagnostic.checkCurrentLine": true,

  // Use preview windows rather than popups.
  // Commented since there's a better workaround for this in init.vim.
  /* "signature.target": "preview", */
  /* "coc.preferences.hoverTarget": "preview", */

  // Swift ====================================================================
  "sourcekit.commandPath": "/usr/bin/sourcekit-lsp",

  // Python-specific ==========================================================
  // A warning is shown during startup to indicate that everything is okay.
  // This removes that:
  "jedi.startupMessage": false,

  // FIXME: When jumping to an error, if there's more than one in the line, I
  // get prompted to "press any key to continue". No idea how to work around
  // that.
}
