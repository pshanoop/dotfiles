[general]
status_path = ~/.local/share/vdirsyncer/status/
password_command = ~/.bin/vdirsyncer-pass

##### Contacts ######

[pair contacts]
a = local
b = radicale

[storage local]
type = filesystem
path = ~/.local/share/contacts/cards/
fileext = .vcf

[storage radicale]
type = carddav
url = https://calendar.barrera.io/hugo/contacts.vcf/
username = hugo

##### Calendar: Study ######

[pair cal_study]
a = cal_study_local
b = cal_study_remote

[storage cal_study_local]
