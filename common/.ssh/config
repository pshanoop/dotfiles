### Global ###
##############

Host *
	ServerAliveInterval 60
	ControlMaster auto
	ControlPath ~/.ssh/master-%r@%h:%p.sock
	IdentityFile ~/.ssh/id_dsa

### My PCs ###
##############

Host hyperion* helios* elysion* hades*
	ForwardAgent yes
Host helios.local
	User user
Host hyperion hyperion.ubertech.com.ar
	Port 1022
Host hades* *.local
	Ciphers arcfour128
	MACs umac-64@openssh.com

### ASSIA INC ###
Host demo-dev* hbarrera-dev*
	User user
Host *.assia-inc.com
	User hbarrera

