### Global ###
##############

Host localhost
	IdentityFile ~/.ssh/id_dsa_local
Host *
	ServerAliveInterval 60
	ControlMaster auto
	ControlPath ~/.ssh/master-%r@%h:%p.sock
	IdentityFile ~/.ssh/id_dsa

### My PCs ###
##############

Host atlas* athena* hades* helios* hyperion*
	ForwardAgent yes
Host helios.local
	User user
Host hades* *.local !atlas.local
	Ciphers arcfour128
	MACs umac-64@openssh.com
Host atlas.local
	User root

### Third party hosts ###

Host codereview.qt-project.org
    Port 29418
    User hobarrera
