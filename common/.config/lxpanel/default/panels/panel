# lxpanel <profile> config file. Manually editing is not recommended.
# Use preference dialog in lxpanel to adjust config when you can.

Global {
    edge=bottom
    allign=right
    margin=0
    widthtype=pixel
    width=230
    height=27
    transparent=1
    tintcolor=#272727
    alpha=255
    autohide=1
    heightwhenhidden=2
    setdocktype=1
    setpartialstrut=0
    usefontcolor=1
    fontcolor=#ffffff
    background=0
    backgroundfile=/usr/share/lxpanel/images/background.png
    iconsize=24
}

Plugin {
    type = space
    expand=1
    Config {
        Size=2
    }
}

Plugin {
    type = tray
}

Plugin {
    type = dclock
    Config {
        ClockFmt=%R:%S
        TooltipFmt=%F (%A) - %T
        BoldFont=0
        IconOnly=0
    }
}

