[general]
metadata = ~/.local/share/offlineimap
accounts = Personal, AIGroup
maxsyncaccounts = 12
ui = basic

### Personal Account ###

[Account Personal]
localrepository = LocalPersonal
remoterepository = RemotePersonal
autorefresh = 5
quick = 2
postsynchook = /usr/bin/notmuch new

[Repository LocalPersonal]
type = Maildir
localfolders = ~/.local/share/maildir/Personal
restoreatime = no

[Repository RemotePersonal]
type = IMAP
remotehost = imap.ubertech.com.ar
remoteuser = hugo@osvaldobarrera.com.ar
remotepassfile = ~/priv/secrets/imap@elysion
ssl = yes
cert_fingerprint = 7711251bac7fd3ced4a1d6fcda0edc156ecaa2f1
idlefolders = ['INBOX', 'INBOX.rss', 'Archives.2013']
maxconnections = 4
holdconnectionopen = yes
subscribedonly = no

