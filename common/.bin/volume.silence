#!/bin/bash

amixer -q set Master toggle

X=`amixer get Master | grep "Front Left: Playback"`
X=${X:`expr index "$X" [`}
X=${X/"]"/""}
X=${X/"[on]"/""}
X=${X/"[off]"/" - Mute"}

if [ -z `echo $X | grep Mute` ]; then
  notify-send "`notify-send  -i /usr/share/icons/Tango/scalable/status/audio-volume-medium.svg "Volume (Unmuted)" "$X"`"
else
  notify-send "`notify-send -i /usr/share/icons/Tango/scalable/status/audio-volume-muted.svg "Volume (Muted)" "$X"`"
fi
